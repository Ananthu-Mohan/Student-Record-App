<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - StudentsRecordApplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/StudentsRecordApplication.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/lottie.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white mb-3 justify-content-end">
            <div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="custom-navbar navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav mb-3">
                        <li class="nav-item mt-4 mx-5">
                            <a class="nav-link text-dark custom-font" href="#Home">H O M E</a>
                        </li>
                        <li class="nav-item mt-4 mx-5">
                            <a class="nav-link text-dark custom-font" href="#Facilities">F A C I L I T I E S</a>
                        </li>
                        <li class="nav-item mt-4 mx-5">
                            <a class="nav-link text-dark custom-font" href="#Awards">A W A R D S</a>
                        </li>
                        <li class="nav-item mt-4 mx-5">
                            <a class="nav-link text-dark custom-font" href="#Education">E D U C A T I O N</a>
                        </li>
                        <li class="nav-item mt-4 mx-5">
                            <a class="nav-link text-dark custom-font" asp-controller="Login" asp-action="Index">L O G I N</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
