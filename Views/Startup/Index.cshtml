@{
    Layout = "_LayoutSimple";
    ViewData["Title"] = "Student Application";
}
<style>
    html {
        scroll-behavior: smooth;
    }

    .parallax {
        position: relative;
        width: 100%;
        height: 100vh;
        overflow: hidden;
    }

    .backgroundImg {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
        opacity: 1;
        transition: opacity 0.5s ease;
    }

    .visible {
        opacity: 1 !important;
    }

    .card {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: rgba(255, 255, 255, 0.8);
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        text-align: center;
        z-index: 1;
    }

    .card h2 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .card p {
        font-size: 16px;
        color: #333;
    }

    .facility-thumbnail {
        width: 100%;
        max-width: 400px;
        height: 70%;
        height: auto;
        object-fit: cover;
        margin-top: 15px;
        margin-bottom: 15px;
    }

    @@keyframes pulsate {
        0% {
            transform: scale(1);
            opacity: 1;
        }

        50% {
            transform: scale(1.1);
            opacity: 0.7;
        }

        100% {
            transform: scale(1);
            opacity: 1;
        }
    }

    @@keyframes fadeInOut {
        0% {
            opacity: 0;
        }

        50% {
            opacity: 1;
        }

        100% {
            opacity: 0;
        }
    }

    .pulsating-text {
        animation: pulsate 7s ease-in-out infinite;
    }

    .line-container {
        width: 100%;
        height: 2px;
        background-color: #ddd;
        position: relative;
        margin-top: 20px;
        overflow: hidden;
    }

    .line {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background-color: limegreen;
        animation: animateLine 5s ease infinite;
    }

    @@keyframes animateLine {
        0% {
            transform: translateX(-100%);
        }

        100% {
            transform: translateX(100%);
        }
    }

    .sub-line-container {
        width: 20%;
        height: 2px;
        background-color: #ddd;
        position: relative;
        margin-top: 20px;
        overflow: hidden;
    }

    .sub-line {
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 2px;
        background-color: crimson;
        animation: animateLine 5s ease infinite;
    }

    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        background-color: black;
    }

    .carousel-control-prev,
    .carousel-control-next {
        color: black;
    }

    .carousel-control-prev {
        left: -130px;
    }

    .carousel-control-next {
        right: -130px;
    }

    .award-item {
        margin: 20px 0;
        padding: 15px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .award-item h4 {
        font-size: 1.5rem;
        color: #007bff;
        margin-bottom: 10px;
    }

    .award-item p {
        font-size: 1rem;
        color: #333;
    }

    .scrollable-card {
        max-height: 800px;
        overflow-y: auto; 
        padding: 15px;
        background-color: rgba(255, 255, 255, 0.8);
        border-radius: 8px; 
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); 
    }

    .scroll-to-top {
        position: fixed;
        bottom: 20px;
        right: 20px;
        background-color: white;
        color: black;
        border: none;
        border-radius: 50%;
        width: 50px;
        height: 50px;
        padding: 0;
        font-size: 24px;
        display: none;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        cursor: pointer;
        text-align: center;
        line-height: 50px;
    }

    .scroll-to-top.show {
        display: block;
    }

    .scroll-to-top:hover {
        background-color: black;
        color: white;
    }
</style>
