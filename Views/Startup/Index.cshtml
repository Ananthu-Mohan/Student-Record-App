<script>
    $(document).ready(function () {
        $("a").on("click", function (event) {
            if (this.hash !== "") {
                event.preventDefault();

                var hash = this.hash;

                $('html, body').animate({
                    scrollTop: $(hash).offset().top
                }, 800, function () {
                    window.location.hash = hash;
                });
            }
        });
        function handleScroll() {
            var scrollPosition = $(window).scrollTop();
            var windowHeight = $(window).height();
            $('.backgroundImg').each(function () {
                var img = $(this);
                var imgTop = img.offset().top;
                var imgBottom = imgTop + img.height();
                if (imgTop < (scrollPosition + windowHeight) && imgBottom > scrollPosition) {
                    img.addClass('visible');
                } else {
                    img.removeClass('visible');
                }
                var parallaxSpeed = 0.8;
                var parallaxOffset = (scrollPosition - imgTop) * parallaxSpeed;
                img.css('transform', 'translate(-50%, -50%) translateY(' + parallaxOffset + 'px)');
            });
        }
        handleScroll();
        $(window).on('scroll', function () {
            handleScroll();
        });
        const scrollToTopBtn = $("#scrollToTopBtn");
        $(window).scroll(function () {
            if ($(this).scrollTop() > 200) {
                scrollToTopBtn.addClass("show");
            } else {
                scrollToTopBtn.removeClass("show");
            }
        });
        scrollToTopBtn.click(function () {
            $("html, body").animate({ scrollTop: $("#Home").offset().top }, 0);
            return false;
        });
    });
</script>
